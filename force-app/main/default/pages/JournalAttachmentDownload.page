<apex:page controller="Docuvault_DownloadJournalAttachment" action="{!generateDownloadLink}">
    <apex:slds />
  
    <div  style="height: 4rem;">
        <div class="slds-notify_container slds-is-relative">
            <div class="slds-notify slds-notify_toast slds-theme_{!messageType}" role="status">
                <div class="slds-notify__content">
                    <h2 class="slds-text-heading_small ">{!message}</h2>
                </div>
            </div>
        </div>
    </div>
    <iframe class="slds-hide" src="{!urlToDownload}" />

</apex:page>