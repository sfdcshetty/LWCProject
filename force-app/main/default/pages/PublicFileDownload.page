<apex:page Controller="DocuvaultFileDownload" showHeader="false" title="File Download" cache="false">
    <meta name="viewport" content="width=device-width, initial-scale=1" />    
    <apex:includeScript value="{!URLFOR($Resource.TVA_CFB__JQueryMin, '')}"/>    
    <apex:stylesheet value="{!URLFOR($Resource.DocuvaultTracking, '/fileDownloadCSS.css')}"/>
    <script>
        
        function validate() {
       
            var ipAddress = document.getElementById ('myIP').value;
            $('#validDiv').css ('color', 'Green');
            $('#validDiv').text ('<apex:outputText value="{!$Label.tva_cfb__validating}" escape="false"/>');
            if ($('#passwordFile').val () != ''){
                DocuvaultFileDownload.downloadFile ($('#passwordFile').val (), document.URL, function (result,event) {
                 
                    if (event.status){
                        if (result != 'Invalid Password' && result != 'The Link you are trying to access is not Accessible.'){
                            
                            var recID = $ ('#recID').val ();
                            DocuvaultFileDownload.createJournalRecord (recID,  ipAddress, 'Secure File Share',
                                                                    function (trackingResult, event){ 
                                if (event.status) { 
                                    var ios = !!navigator.platform && /iPad|iPhone|iPod/.test(navigator.platform);
                                    var replacedString = result.replace(/amp;/g,'');
                                    if (ios) {

                                        document.getElementById ('downloadURL').href = replacedString;
                                         
                                        document.getElementById('downloadURL').click ();
                                         
                                    } else {
                                        
                                        var ifrm = document.createElement("IFRAME");
                                        ifrm.setAttribute("src", replacedString );
                                        ifrm.frameBorder = 0;
                                        ifrm.setAttribute("width","80%");
                                        ifrm.setAttribute("height","30%");
                                        document.body.appendChild(ifrm);
                                    }
                                    $('#validDiv').text ('<apex:outputText value="{!$Label.tva_cfb__downloading_completed}" escape="false"/>');
                                }
                                else {
                                    $('#validDiv').css ('color', 'Red');
                                    $('#validDiv').text ('Some thing went Wrong. Please reload the page and try Again!.');
                                }    
                            });
                        }
                        else{
                            $('#validDiv').css ('color', 'Red');
                            $('#validDiv').text (result+'.');
                        }                 
                    }
                                  
                });
            }
            else{
                $('#validDiv').css ('color', 'Red');
                $('#validDiv').text ('<apex:outputText value="{!$Label.tva_cfb__please_enter_password}" escape="false"/>');    
            }
        
    
        }
    
    </script>
    <div id="container">
        <apex:form id="form" >
            <input type="hidden" value="{!myIP}" id="myIP" />
            <a href="" id="downloadURL" style="display:none"/>
            <br/><br/>
            
            <apex:outputPanel id="errorPanel" rendered="{! IF (errorMessage != '', true, false) }">
                <div class="slds-notify_container slds-theme--error">
                    {!errorMessage}
                </div>
            </apex:outputPanel>
            <apex:outputPanel rendered="{!if(errorMessage == '',True,false) }" >
                <input type="hidden" value="{!file2[0].id}" id="recID"/>
                <center>
                    <h1 style="font-weight: 700;font-size:14px;"><apex:outputText value="{!$Label.tva_cfb__the_link_you_are_trying_to_access_is_password_protected}"/></h1>
                    <br/><br/>
                    <table>
                        <tr>
                            <td style="width:50%;text-align:right" valign="top"><b><apex:outputText value="{!$Label.tva_cfb__file_name}"/> :&nbsp;&nbsp;</b></td>
                            <td style="width:50%">{!file2[0].name}</td>
                        </tr>              
                        
                        <tr>
                            <td style="width:50%;text-align:right"><b><apex:outputText value="{!$Label.tva_cfb__type}"/> :&nbsp;&nbsp;</b> </td>
                            <td style="width:50%">{!file2[0].TVA_CFB__File_Type__c }</td>
                        </tr> 
                        <tr>
                            <td style="width:50%;text-align:right"><b><apex:outputText value="{!$Label.tva_cfb__size}"/> :&nbsp;&nbsp;</b></td>
                            <td style="width:50%">{!file2[0].TVA_CFB__File_Size__c}</td>
                        </tr> 
                            
                    </table>
                    <br/>
                    <input class="textbox" type="Password" id="passwordFile" placeHolder="{!$Label.TVA_CFB__Password}" /><br/>
                    <div id="validDiv" style="padding:10px;"></div>
                    <Button class="btnclass" onclick="validate();return false;"><apex:outputText value="{!$Label.tva_cfb__download}"/></button>
                </center>
                
            </apex:outputPanel>
            
            <div id="footer">
                <apex:outputText id="footerText" value="{!$Label.tva_cfb__powered_by_docuvault}" />
                <a href="http://docuvault.io/" title="DocuVault" target="_blank">DocuVault</a>
                <img src="{!$Resource.TVA_CFB__docuvault_Icon}" width="20px" height="24px" style="position: relative;top: 8px;"/>
            </div>
        </apex:form>
    </div>
    <center>
        <div style="height: 4rem;display:none" id="errorBlock">
            <div class="slds-notify_container slds-is-relative">
                <div class="slds-notify slds-notify_toast slds-theme_error" role="alert">
                    
                    <div class="slds-notify__content">
                        <h2 class="slds-text-heading_small" id="errorMsg" ></h2>
                    </div>
                    
                </div>
            </div>
        </div>
    </center>
</apex:page>