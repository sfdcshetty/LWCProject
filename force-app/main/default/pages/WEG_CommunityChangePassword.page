<apex:page id="ChangePassword" showHeader="false" controller="WEG_CommunityUtility" applyHtmlTag="true" applyBodyTag="false">
    <head>
        <apex:slds />
    </head>
    
    <body class="slds-scope">
        <div class="slds-grid slds-grid_align-center">
            <div class="slds-p-around_medium slds-size_3-of-12">
            </div>
            
            <div class="slds-p-around_medium slds-size_6-of-12">
                <div class="slds-page-header">
                    <h1 class="slds-page-header__title"> Change Password </h1>
                </div>
                
                <br/>
                
                <apex:form id="theForm">
                    
                    <!--<apex:messages id="msg" styleClass="errorMsg" layout="list" style="margin-top:1em;" />-->
                    <apex:pageMessages id="msg" />
                    
                    <apex:panelGrid columns="2" styleClass="slds-m-top_large">
                        
                        <apex:outputLabel value="Old Password" for="oldPassword" styleClass="slds-form-element__label" />
                        <apex:inputSecret required="true" id="oldPassword" value="{!oldPassword}" styleClass="slds-input" />
                        
                        <apex:outputLabel value="New Password" for="newPassword" styleClass="slds-form-element__label slds-m-top_small" />
                        <apex:inputSecret required="true" id="newPassword" value="{!newPassword}" styleClass="slds-input slds-m-top_small" />
                        
                        <apex:outputLabel value="Confirm New Password" for="confirmNewPassword" styleClass="slds-form-element__label slds-m-top_small" />
                        <apex:inputSecret required="true" id="confirmNewPassword" value="{!confirmNewPassword}" styleClass="slds-input slds-m-top_small" />
                        
                        <div>
                            <apex:commandButton action="{!vfChangePassword}" value="Save" id="submit" styleClass="slds-button slds-button_brand slds-m-top_large slds-float_right" />
                        </div>
                    </apex:panelGrid>
                </apex:form>
            </div>
            
            <div class="slds-p-around_medium slds-size_3-of-12">
            </div>
        </div>
    </body>
</apex:page>