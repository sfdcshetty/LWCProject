<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>51.0</apiVersion>
    <description>X7S Document Uploader</description>
    <isExposed>true</isExposed>
    <masterLabel>X7S Document Uploader</masterLabel>

    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>

    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property type="String" name="maxFileSize" label="Max File Size (kb)"
                      description="Max allowable file size in kB - 1048576 kb = 1MB - the error message will reflect the appropriate size. Defaults to 25MB."/>
        </targetConfig>
    </targetConfigs>

</LightningComponentBundle>