<aura:component controller="DocuvaultGeneratePasswordLinkController" 
                implements="force:lightningQuickActionwithoutHeader,force:hasRecordId" 
                access="global">
    <aura:attribute type="string" name="email" default=""/>
    <lightning:card >
        <aura:set attribute="title">
            <div class="slds-text-title_caps slds-text-align--center">
                Generate Shareable Link
            </div>
        </aura:set>
        <aura:set attribute="footer">
            <lightning:button variant="neutral" label="Cancel" onclick="{! c.cancel }" />
            <lightning:button variant="brand" label="Send Email" onclick="{! c.sendEmail }" />
        </aura:set>
        <p class="slds-p-horizontal--small">
        	<lightning:input type="email" value="{!v.email}" label="Email" required="true"/>
        </p>
        
    </lightning:card>
</aura:component>