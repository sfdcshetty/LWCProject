<aura:component implements="flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId" access="global" >
    <aura:attribute name="accountRecord" type="Object" />
    <aura:attribute name="recordId" type="Id" />
    <aura:attribute name="fieldWrapList" type="List" />
    <aura:attribute name="fieldsToQuery" type="String[]" default="['RecordType.Name','WEGP1_Primary_Individual__c','WEGP1_Primary_Individual__r.Full_Name__c','WEGP1_Primary_Individual__r.FinServ__PreferredName__c','WEGP1_Primary_Individual__r.Birthdate','WEGP1_Primary_Individual__r.FinServ__AgeAsText__c','WEGP1_Primary_Individual__r.Phone','WEGP1_Primary_Individual__r.WEGP1_PrimaryPhone__c','WEGP1_Primary_Individual__r.Email','WEGP1_Primary_Individual__r.WEGP1_PrimaryEmail__c','WEGP1_Primary_Individual__r.FinServ__TaxId__c','WEGP1_Primary_Individual__r.FinServ__CurrentEmployer__c','WEGP1_Secondary_Individual__c','WEGP1_Secondary_Individual__r.Full_Name__c','WEGP1_Secondary_Individual__r.FinServ__PreferredName__c','WEGP1_Secondary_Individual__r.Birthdate','WEGP1_Secondary_Individual__r.FinServ__AgeAsText__c','WEGP1_Secondary_Individual__r.Phone','WEGP1_Secondary_Individual__r.WEGP1_PrimaryPhone__c','WEGP1_Secondary_Individual__r.Email','WEGP1_Secondary_Individual__r.WEGP1_PrimaryEmail__c','WEGP1_Secondary_Individual__r.FinServ__TaxId__c','WEGP1_Secondary_Individual__r.FinServ__CurrentEmployer__c']"/> 

    <force:recordData aura:id="recordLoader"
                      recordId="{!v.recordId}"
                      targetFields="{!v.accountRecord}"
                      fields="{!v.fieldsToQuery}"
                      mode="VIEW"
                      recordUpdated="{!c.init}"/>
    <div class="demo-only">
        <aura:if isTrue="{!v.accountRecord.RecordType.Name == 'Household'}" >
			<div class="slds-form slds-form_compound">
                <fieldset class="slds-form-element">
                    <table class="slds-table slds-table_cell-buffer">
                        <thead>
                            <tr class="slds-text-title_caps" >
                                <th scope="col"><div class="slds-truncate boldFont" ></div></th>
                                <th scope="col"><div class="slds-truncate boldFont" >Primary Individual</div></th>
                                <th scope="col"><div class="slds-truncate boldFont" >Secondary Individual</div></th>
                            </tr>
                        </thead>
                        <tbody>
                            <aura:iteration items="{!v.fieldWrapList}" var="item">
                                <tr>
                                    <td><div class="slds-truncate" >{!item.fieldLabel}</div></td>
                                    <td><div class="slds-truncate" >{!item.primaryValue}</div></td>
                                    <td><div class="slds-truncate" >{!item.secondaryValue}</div></td>
                                </tr>
                            </aura:iteration>
                        </tbody>
                    </table>
                </fieldset>
            </div>
        </aura:if>
    </div>
</aura:component>