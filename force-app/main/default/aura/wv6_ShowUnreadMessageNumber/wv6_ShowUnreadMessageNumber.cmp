<aura:component controller="wv6_UnreadMessageNumber" implements="forceCommunity:availableForAllPageTypes" access="global" >
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
	<aura:attribute name="unreadMessageCount" type="integer" />
    <article class="slds-card">
        <div class="slds-card__header slds-grid">
            <header class="slds-media slds-media_center slds-has-flexi-truncate">
                <div class="slds-media__body">
                    <h2 style="text-align: center">
                        <a href="{!'/'+$Label.c.Community_Name+'/s/secure-messaging'}" class="slds-card__header-link slds-truncate" title="">
                        	<span class="slds-text-heading_small">Number of unread messages: </span>
                            <span style="font-size:20px;color:rgb(63, 156, 53);">{!v.unreadMessageCount}</span>                           
                        </a>
                    </h2>
                </div>
            </header>
        </div>
        <div class="slds-card__body"></div>
	</article>
</aura:component>